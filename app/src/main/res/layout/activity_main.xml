<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDE937"
    tools:context=".ui.Activity.login.MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.13"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.87"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/bmdohyun"
        android:src="@drawable/kakao"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="@id/left_line"
        app:layout_constraintRight_toRightOf="@id/right_line"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_putID"
        android:layout_width="303dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded"
        android:ems="10"
        android:hint="   Your ID"
        android:textColorHint="@color/black"
        android:layout_marginLeft="-17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/left_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.424" />

    <EditText
        android:background="@drawable/rounded"
        android:id="@+id/et_putPW"
        android:layout_width="303dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:textColorHint="@color/black"
        android:hint="   Password"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@id/left_line"
        android:layout_marginLeft="-17dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/et_putID" />

    <TextView
        android:id="@+id/tv_SIgnIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-10dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="200dp"
        android:fontFamily="@font/bmdohyun"
        android:text="Sign in"
        android:textColor="@color/black"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintLeft_toLeftOf="@id/left_line"
        app:layout_constraintRight_toRightOf="@id/right_line" />

    <ImageView
        android:id="@+id/iv_join"
        android:layout_width="78dp"
        android:layout_height="9dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/left_line"
        app:srcCompat="@drawable/rectangle" />

    <ImageView
        android:id="@+id/iv_forgetPw"
        android:layout_width="159dp"
        android:layout_height="9dp"
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="-5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/right_line"
        app:layout_constraintHorizontal_bias="0.666"
        app:srcCompat="@drawable/rectangle2" />

    <TextView
        android:id="@+id/tv_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="회원 가입"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_join"
        app:layout_constraintEnd_toEndOf="@+id/iv_join"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="@+id/iv_join" />

    <TextView
        android:id="@+id/tv_forgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="8dp"
        android:text="비밀번호를 잃어버렸어요"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_forgetPw"
        app:layout_constraintRight_toRightOf="@id/right_line" />

    <ImageButton
        android:id="@+id/ib_next"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="235dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintRight_toRightOf="@id/right_line"
        app:layout_constraintBottom_toBottomOf="@+id/tv_SIgnIn"
        app:layout_constraintLeft_toLeftOf="@id/left_line"
        app:layout_constraintTop_toTopOf="@+id/tv_SIgnIn"
        app:layout_constraintVertical_bias="0.521"
        app:srcCompat="@drawable/circle" />

</androidx.constraintlayout.widget.ConstraintLayout>