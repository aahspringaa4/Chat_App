<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDE937"
    tools:context="ui.activity.login.JoinActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.13" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.87" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-12dp"
        android:layout_marginTop="110dp"
        android:fontFamily="@font/bmdohyun"
        android:text="Create ID"
        android:textColor="@color/black"
        android:textSize="50dp"
        app:layout_constraintLeft_toLeftOf="@id/left_line"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_RegisterBirth"
        android:layout_width="303dp"
        android:layout_height="50dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/rounded2"
        android:hint="생년월일을 입력해주세요"
        android:inputType="textNoSuggestions"
        android:padding="12dp"
        android:textColorHint="#605F5F"
        app:layout_constraintLeft_toLeftOf="@id/left_line"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <EditText
        android:id="@+id/et_RegisterPhone"
        android:layout_width="303dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded2"
        android:hint="핸드폰 번호"
        android:inputType="textNoSuggestions"
        android:padding="12dp"
        android:textColorHint="#605F5F"
        app:layout_constraintEnd_toEndOf="@+id/et_RegisterBirth"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_RegisterBirth"
        app:layout_constraintTop_toBottomOf="@+id/et_RegisterBirth" />

    <Spinner
        android:id="@+id/ChooseSex"
        android:layout_width="303dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded2"
        android:entries="@array/gender"
        android:spinnerMode="dialog"
        android:padding="3dp"
        app:layout_constraintEnd_toEndOf="@+id/et_RegisterPhone"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/et_RegisterPhone"
        app:layout_constraintTop_toBottomOf="@+id/et_RegisterPhone" />

    <TextView
        android:id="@+id/et_RegisterSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별 선택"
        android:textColor="#605F5F"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/ChooseSex"
        app:layout_constraintEnd_toEndOf="@+id/ChooseSex"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="@+id/ChooseSex"
        app:layout_constraintTop_toTopOf="@+id/ChooseSex"
        app:layout_constraintVertical_bias="0.518" />

    <TextView
        android:id="@+id/tv_signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/bmdohyun"
        android:text="다음 "
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="@id/left_line"
        app:layout_constraintTop_toBottomOf="@+id/et_RegisterSex" />

    <ImageButton
        android:id="@+id/ib_Register"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginRight="-5dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/tv_signUp"
        app:layout_constraintRight_toRightOf="@id/right_line"
        app:layout_constraintTop_toTopOf="@+id/tv_signUp"
        app:layout_constraintVertical_bias="0.464"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="78dp"
        android:layout_height="9dp"
        android:layout_marginBottom="34dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/right_line"
        app:srcCompat="@drawable/rectangle" />

    <TextView
        android:id="@+id/tv_signIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="돌아가기"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintStart_toStartOf="@+id/imageView5" />


</androidx.constraintlayout.widget.ConstraintLayout>